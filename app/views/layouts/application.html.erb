<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
	<nav class="main">	
	<span><%= link_to 'TODOLIST', root_path %></span>
		<ul class="hmenu">
		<% if user_signed_in? %>
		<li class="welcome">Welcome <%= current_user.email %></li>
		 <% end %>
		 
		<%= render 'devise/menu/registration_items' %>  
		
		  <%= render 'devise/menu/login_items' %>
		
		
		</ul>
		
	</nav>
	<nav class="navigate">
		<ul>
			<%= render 'shared/nav'%>
		</ul>
	</nav>
</header>	
	
<section>
		<% flash.each do |key,value| %>
		<div class="flash" id="<%= key %>">
			<%= value %>
		</div>
		
		<% end %>
		
		<div id='flash'></div>




<%= yield %>

</section>
</body>
</html>
